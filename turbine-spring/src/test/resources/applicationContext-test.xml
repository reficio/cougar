<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd">

	<tx:annotation-driven transaction-manager="jmsTransactionManager"/>

	<bean id="stompConnectionFactory" class="org.reficio.stomp.spring.test.mock.MockConnectionFactory">
		<constructor-arg type="java.lang.Class" value="org.reficio.stomp.impl.MockTransactionalConnectionImpl"/>
        <property name="hostname" value="127.0.0.1"/>
        <property name="port" value="4444"/>
        <property name="username" value="kajek"/>
        <property name="password" value="kajek"/>
        <property name="encoding" value="UTF-8"/>
    </bean>
    
    <!-- 
    <bean id="transactionalConnectionFactory" class="org.reficio.stomp.springonnection.TransactionAwareConnectionFactoryProxy">
		<property name="targetConnectionFactory"><ref local="stompConnectionFactory"/></property>
		<property name="synchedLocalTransactionAllowed" value="true"/>
	</bean>
 	-->	

    <bean id="stompTemplate" class="org.reficio.stomp.spring.StompTemplate">
    	<property name="connectionFactory" ref="stompConnectionFactory"/>
        <property name="connectionTransacted" value="false"/>
    </bean>
    
    <bean id="transactionalStompTemplate" class="org.reficio.stomp.spring.StompTemplate">
    	<property name="connectionFactory" ref="stompConnectionFactory"/>
        <property name="connectionTransacted" value="true"/>
    </bean>
    
    <bean id="jmsTransactionManager" class="org.reficio.stomp.spring.connection.StompTransactionManager">
		<property name="connectionFactory"><ref local="stompConnectionFactory"/></property>
	</bean>
	
	<bean id="transactionalOperations" class="org.reficio.stomp.spring.test.service.TransactionalOperations">
		<property name="stompTemplate"><ref local="transactionalStompTemplate"/></property>
	</bean>
	
	<bean id="transactionalOrchestrator" class="org.reficio.stomp.spring.test.service.TransactionalOrchestrator">
		<property name="top"><ref local="transactionalOperations"/></property>
	</bean>

</beans>